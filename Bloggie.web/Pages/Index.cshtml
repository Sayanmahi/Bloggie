@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div classs="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The blog for development
            </h1>
            <p class="lead">Bloggie is home for bloggers.</p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="data:image/png;base64," alt="front image"
            class="d-block mx-lg-auto img-fluid" width="400"/>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h2 class="mb-5 display-3">Blogs</h2>
            <div class="mb-3">
                @if(Model.Tags !=null && Model.Tags.Any())
                {
                    foreach (var t in Model.Tags)
                    {
                        <span class="badge bg-dark">@t.Name</span>
                    }
                }
               
            </div>
            @if (Model.Blogs != null && Model.Blogs.Any())
            {
                foreach (var a in Model.Blogs)
                {
                    <div class="mb-5 bg-light box-shadow">
                        <img src="@a.FeaturedImageUrl" alt="@a.Heading" class="mb-2 d-block img-fluid" />
                        <div class="px-4 py-4">
                            <h2 class="mb-2">@a.Heading</h2>
                            <p>
                                Author: @a.Author
                                <br />
                                Date Published: @a.PublishedDate.ToShortDateString()
                            </p>
                            <p class="mb-2">
                                @a.ShortDescription
                            </p>
                            <a href="/blog/@a.UrlHandle" class="btn btn-dark">Read More</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
